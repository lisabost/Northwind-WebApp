@using Northwind.Models
@model Customer

<h2 class="mt-3"><i class="far fa-address-card"></i> Customer Account</h2>

<form method="post" asp-action="Account">
    <div asp-validation-summary="All" style="color:red;"></div>
    <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.CompanyName">Company Name</label>
            <input disabled asp-for="@Model.CompanyName" class="form-control" placeholder="Company Name" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Address">Address</label>
            <input asp-for="@Model.Address" class="form-control" placeholder="Address" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.City">City</label>
            <input asp-for="@Model.City" class="form-control" placeholder="City" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Region">Region</label>
            <input asp-for="@Model.Region" class="form-control" placeholder="Region" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.PostalCode">Postal Code</label>
            <input asp-for="@Model.PostalCode" class="form-control" placeholder="Postal Code" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Country">Country</label>
            <input asp-for="@Model.Country" class="form-control" placeholder="Country" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Phone">Phone</label>
            <input asp-for="@Model.Phone" class="form-control" placeholder="Phone" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Fax">Fax</label>
            <input asp-for="@Model.Fax" class="form-control" placeholder="Fax" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Save</button>
</form>

<br>

<div class="accordion" id="accordionExample">
    <div class="card">
        <div id="reviews-header-btn" class="btn card-header" id="headingOne" action="action" type="button"
            data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            <div class="d-inline-block float-left" style="z-index: 2;">
                Your Reviews
            </div>
            <div class="float-right">
                <i id="chevron" class="animated-icon fas fa-chevron-up"></i>
            </div>
        </div>
        <div id="collapseOne" class="collapse" style="background-color: rgba(207, 148, 47, 0.1)"
            aria-labelledby="headingOne" data-parent="#accordionExample">
            <div id="user-reviews" class="card-body"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/user_reviews.js"></script>
}