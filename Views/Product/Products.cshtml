@using Northwind.Models
@model IEnumerable<Category>

<div class="Container">
    <div id="products-header">
        <h2>Products</h2>
        
        <div class="collapse my-4" id="filters-content">
            <div class="card card-body">
                <div id="filter">
                    <div class="container">
                        <div class="row" style="font-size: 20px;">
                            <div class="col-sm-auto my-auto">
                            
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">Discontinued</span>
                                    </div>
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <input type="checkbox" id="discontinued" aria-label="Determines whether discontinued products are displayed.">
                                        </div>
                                    </div>
                                </div>
                            
                            </div>

                            @if (User?.Identity?.IsAuthenticated ?? true) {
                            <div class="col-sm-auto my-auto">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">Purchased</span>
                                    </div>
                                    <div class="input-group-append">
                                        <div class="input-group-text">
                                            <input type="checkbox" id="purchased" aria-label="Only displays purchased Items.">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            }

                            <div class="col-sm-auto my-auto">

                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <label class="input-group-text" for="category-filter">Category</label>
                                    </div>
                                    <select id="category-filter">
                                        <option value="0" selected>All</option>
                                        @foreach (Category c in Model)
                                        {
                                            <option value="@c.CategoryId">@c.CategoryName</option>
                                        }
                                    </select>
                                </div>

                                
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <a id="filter-content-toggle" data-istoggled="false" style="text-align: center;" data-toggle="collapse" href="#filters-content" role="button"
            aria-expanded="false" aria-controls="filters-content">
            Show Filters&nbsp;<i class="fas fa-filter"></i>
        </a>
    </div>

    <hr>
    <div id="loading" class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div id="products" class="row" style="min-height: 684px;">
        @* Product Cards Injected *@
        <div class="tab-content" id="products-page-content">
            <div class="tab-pane fade show active" id="page-1" role="tabpanel" aria-labelledby="page-1">
                <div class="row" id="page-1-contents"></div>
            </div>
        </div>
    </div>
    <hr>
    <br>
    <div id="pagination" style="">
        <ul id="page-list" class="nav nav-pills">
            <li class="nav-item">
                <a class="nav-link active" id="page-1-button" data-toggle="tab" href="#page-1">1</a>
            </li>
        </ul>
    </div>
</div>

<!-- cart item modal -->
<div id="cartModal" class="modal fade" tabindex="-1" role="dialog">
    @* store user information and logged in status *@
    <div id="User" style="display:none;" data-email="@User.Identity.Name"
        data-customer='@User.IsInRole("northwind-customer")'></div>

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add to Cart?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div style="display:none;" id="ProductId"></div>
                <div class="row">
                    <div class="col col-xs-5"><strong>Product</strong></div>
                    <div class="col col-xs-2 text-right"><strong>Price</strong></div>
                    <div class="col col-xs-2"><strong>Quantity</strong></div>
                    <div class="col col-xs-3 text-right"><strong>Total</strong></div>
                </div>
                <div class="row">
                    <div class="col col-xs-5 pt-2" id="ProductName">Cool Product</div>
                    <div class="col col-xs-2 pt-2 text-right">
                        $<span id="UnitPrice">9.99</span>
                    </div>
                    <div class="col col-xs-2">
                        <input type="number" min="1" value="1" id="Quantity" class="form-control" />
                    </div>
                    <div class="col col-xs-3 pt-2 text-right">
                        $<span id="Total">0.00</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="addToCart">Continue</button>
            </div>
        </div>
    </div>
</div>
