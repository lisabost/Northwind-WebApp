<style>
    .card {
        -webkit-box-shadow: 0px 0px 15px -15px #000000;
        box-shadow: 0px 0px 15px -15px #000000;
    }

    .card:hover {
        -webkit-transition: all 0.2s ease;
        transition: all 0.2s ease;
        -webkit-box-shadow: 0px 0px 15px 0px #cf942f;
        box-shadow: 0px 0px 15px 0px #cf942f;
        border-radius: 15px;
        cursor: pointer;
    }
</style>

@section scripts {
<script>
    $(() => {
        const formatter = new Intl.NumberFormat('en-US', {
            style: 'currency',
            currency: 'USD'
        });
        getProducts();
        function getProducts() {
            $.getJSON({
                url: `../../api/product/`,
                success: function (res, status, jqXhr) {
                    let output = "Error grabbing products...";
                    let products_container = $('#products');
                    
                    if (res.length == 0) {
                        output = `
                            <div class="col py-2">
                                <div class="card mx-auto" style="width: 18rem;">
                                    <div class="card-body">
                                        There was a problem loading the products...
                                    </div>
                                </div>
                            </div>
                        `;
                        products_container.html(output);
                    } else {
                        for (let i = 0; i < res.length; i++) {
                            let product = res[i];
                            output = `
                                <div class="col py-2">
                                    <div class="card mx-auto" style="width: 18rem;">
                                        <div class="card-body">
                                            <button style="z-index: 2; position: relative" id="add-to-cart" class="add-to-cart-button btn btn-primary float-right" data-productid="${product.productId}" data-productname="${product.productName}" data-unitprice="${product.unitPrice}"><i class="fas fa-cart-plus"></i></button>
                                            
                                            <p style="max-width: 175px;" class="d-block h5">${product.productName}</p>
                                            <hr style="padding-bottom: 10px;">
                                            <h6 class="">${formatter.format(product.unitPrice)}</h6>
                                            <span style="" class="review-stars" id="review-${product.productId}" data-rating="${product.averageRating}" data-interactive="false">
                                                <i class="far fa-star rate-popover" data-value="2"></i>
                                                <i class="far fa-star rate-popover" data-value="4"></i>
                                                <i class="far fa-star rate-popover" data-value="6"></i>
                                                <i class="far fa-star rate-popover" data-value="8"></i>
                                                <i class="far fa-star rate-popover" data-value="10"></i>
                                            </span>
                                            <span>
                                                (${product.ratingCount})
                                            </span>
                                            <a href="/Product/ProductDetail/${product.productId}" class="stretched-link"></a>
                                        </div>
                                    </div>
                                </div>
                            `;
                            products_container.append(output);

                            setStars($(`#review-${product.productId}`), product.averageRating);
                        
                        }
                        hideSpinner();
                    }
                },
                error: function (jqXHR, status, err) {
                    console.log("Error while getting products: " + status, err);
                    hideSpinner();
                }
            });
        }
    });

    function hideSpinner() {
        let spinner = $('#loading');
        spinner.removeClass('d-flex');
        spinner.addClass('d-none');
    }
</script>
}

<div class="Container">
    <h2>Products</h2>
    <hr>
    <div id="loading" class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <div id="products" class="row">
        @* Product Cards Injected *@
    </div>
</div>

<!-- cart item modal -->
<div id="cartModal" class="modal fade" tabindex="-1" role="dialog">
    @* store user information and logged in status *@
    <div id="User" style="display:none;" data-email="@User.Identity.Name"
    data-customer='@User.IsInRole("northwind-customer")'></div>

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add to Cart?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div style="display:none;" id="ProductId"></div>
                <div class="row">
                    <div class="col col-xs-5"><strong>Product</strong></div>
                    <div class="col col-xs-2 text-right"><strong>Price</strong></div>
                    <div class="col col-xs-2"><strong>Quantity</strong></div>
                    <div class="col col-xs-3 text-right"><strong>Total</strong></div>
                </div>
                <div class="row">
                    <div class="col col-xs-5 pt-2" id="ProductName">Cool Product</div>
                    <div class="col col-xs-2 pt-2 text-right">
                        $<span id="UnitPrice">9.99</span>
                    </div>
                    <div class="col col-xs-2">
                        <input type="number" min="1" value="1" id="Quantity" class="form-control" />
                    </div>
                    <div class="col col-xs-3 pt-2 text-right">
                        $<span id="Total">0.00</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="addToCart">Continue</button>
            </div>
        </div>
    </div>
</div>
