@using Northwind.Models
@model IEnumerable<ProductDetailViewModel>

<style>
    .card {
        -webkit-box-shadow: 0px 0px 15px -15px #000000;
        box-shadow: 0px 0px 15px -15px #000000;
    }

    .card:hover {
        -webkit-transition: all 0.2s ease;
        transition: all 0.2s ease;
        -webkit-box-shadow: 0px 0px 15px 0px #cf942f;
        box-shadow: 0px 0px 15px 0px #cf942f;
        border-radius: 15px;
        cursor: pointer;
    }
</style>

<div class="Container">
    <h2>Products</h2>
    @if (Model.Any())
    {
        <div class="row">
            @foreach (ProductDetailViewModel i in Model)
            {
                <div class="col py-2">
                    <div class="card mx-auto" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@i.Product.ProductName</h5>
                            <h6 class="">@i.Product.UnitPrice.ToString("c2")</h6>
                            <span style="" class="review-stars" id="review-@i.Product.ProductId" data-rating="@i.AvgRating()" data-interactive="false">
                                <i class="far fa-star rate-popover" data-value="2"></i>
                                <i class="far fa-star rate-popover" data-value="4"></i>
                                <i class="far fa-star rate-popover" data-value="6"></i>
                                <i class="far fa-star rate-popover" data-value="8"></i>
                                <i class="far fa-star rate-popover" data-value="10"></i>
                            </span>
                            <span>
                                (@i.Reviews.Count())
                            </span>
                            <a asp-action="ProductDetail" asp-controller="Product" asp-route-id="@i.Product.ProductId"
                        class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <h3>No Products Available.</h3>
    }

</div>
