@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<style>
    .card {
        -webkit-box-shadow: 0px 0px 15px -15px #000000;
        box-shadow: 0px 0px 15px -15px #000000;
    }

    .card:hover {
        -webkit-transition: all 0.2s ease;
        transition: all 0.2s ease;
        -webkit-box-shadow: 0px 0px 15px 0px #cf942f;
        box-shadow: 0px 0px 15px 0px #cf942f;
        border-radius: 15px;
        cursor: pointer;
    }
</style>

@section scripts {
<script>
    $(() => {
        getProducts();
        function getProducts() {
            $.getJSON({
                url: `../../api/product/`,
                success: function (res, status, jqXhr) {
                    let output = "Error grabbing products...";
                    let products_container = $('#products');
                    
                    if (res.length == 0) {
                        output = `
                            <div class="col py-2">
                                <div class="card mx-auto" style="width: 18rem;">
                                    <div class="card-body">
                                        There was a problem loading the products...
                                    </div>
                                </div>
                            </div>
                        `;
                        products_container.html(output);
                    } else {
                        for (let i = 0; i < res.length; i++) {
                            let product = res[i];
                            output = `
                                <div class="col py-2">
                                    <div class="card mx-auto" style="width: 18rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">${product.productName}</h5>
                                            <h6 class="">$${product.unitPrice}</h6>
                                            <span style="" class="review-stars" id="review-${product.productId}" data-rating="${product.averageRating}" data-interactive="false">
                                                <i class="far fa-star rate-popover" data-value="2"></i>
                                                <i class="far fa-star rate-popover" data-value="4"></i>
                                                <i class="far fa-star rate-popover" data-value="6"></i>
                                                <i class="far fa-star rate-popover" data-value="8"></i>
                                                <i class="far fa-star rate-popover" data-value="10"></i>
                                            </span>
                                            <span>
                                                (${product.ratingCount})
                                            </span>
                                            <a asp-action="ProductDetail" asp-controller="Product" asp-route-id="${product.productId}" class="stretched-link"></a>
                                        </div>
                                    </div>
                                </div>
                            `;
                            products_container.append(output);

                            setStars($(`#review-${product.productId}`), product.averageRating);
                        
                        }
                    }
                },
                error: function (jqXHR, status, err) {
                    console.log("Error while getting products: " + status, err);
                }
            });
        }
    });
</script>
}


<div class="Container">
    <h2>Products</h2>
    <div id="products" class="row">
        @* Product Cards Injected *@
    </div>
</div>
