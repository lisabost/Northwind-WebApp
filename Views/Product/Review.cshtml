@using Northwind.Models
@model AddReviewModel

<h2 class="mt-3"><i class="far fa-address-card"></i>&nbsp;Product Review - @Model.Product.ProductName</h2>
<h1>@User.Identity.Name</h1>

<form method="post" asp-action="AddReview">

    <div asp-validation-summary="All" style="color:red;"></div>
        <div class="form-group">
            <label asp-for="@Model.Review.Rating">Rating</label>
            <select asp-for="@Model.Review.Rating">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Review.Comment" for="comment">Comment</label>
            <textarea asp-for="@Model.Review.Comment" class="form-control" id="comment" rows="3"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="cubmit">Add Review</button>
        </div>
</form>