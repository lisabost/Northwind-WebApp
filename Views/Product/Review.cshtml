@using Northwind.Models
@model Review

<h2 class="mt-3"><i class="far fa-address-card"></i> Product Review</h2>

<form method="post" asp-action="AddReview">
    <div asp-validation-summary="All" style="color:red;"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="@Model.Rating">Rating</label>
            <input asp-for="@Model.Rating" class="form-dropdown" placeholder="" />
        </div>
    </div>
</form>